{
  "javascript.validate.enable": false,
  "flow.useNPMPackagedFlow": true,
  "search.exclude": {
    ".git": true,
    ".eslintcache": true,
    "app/dist": true,
    "app/main.prod.js": true,
    "app/main.prod.js.map": true,
    "bower_components": true,
    "dll": true,
    "flow-typed": true,
    "release": true,
    "node_modules": true,
    "npm-debug.log.*": true,
    "test/**/__snapshots__": true,
    "yarn.lock": true
  },
  "bump.files": {
    "app/package.json": ["\"version\":\\s*\"([^\"]*)\"", "\"version\": \"[version]\""],
    "app/package-lock.json": ["\"version\":\\s*\"([^\"]*)\"", "\"version\": \"[version]\""]
  },
  "bump.commit.enabled": false
}
